<%!--
  Material UI Navigation Item Component
  =====================================
  Reusable navigation item for the left drawer.

  Usage:
    <.nav_item
      navigate={~p"/dashboard"}
      icon="home"
      label="Dashboard"
      active={@current_page == :dashboard}
      count={5}
      warning="Reconnection required"
    />

  Props:
    - navigate: Phoenix route path
    - icon: Icon name (home, document, refresh, server, settings, etc.)
    - label: Display text
    - active: Boolean for active state (green left border)
    - count: Optional badge count
    - warning: Optional warning message (displays BELOW the item - MANDATORY pattern)
--%>

<%!-- Nav Item Component Definition --%>
<div>
  <.link
    navigate={@navigate}
    class={[
      "flex items-center gap-3 px-4 py-3 rounded-lg transition-colors",
      if(@active,
        do: "bg-[#E8F8EB] border-l-4 border-[#4CD964] text-[#4CD964] font-medium",
        else: "text-gray-700 hover:bg-gray-100 border-l-4 border-transparent"
      )
    ]}
  >
    <%!-- Icon --%>
    <svg class={["w-5 h-5", if(@active, do: "text-[#4CD964]", else: "text-gray-500")]} fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <%= case @icon do %>
        <% "home" -> %>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
        <% "document" -> %>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
        <% "refresh" -> %>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
        <% "server" -> %>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
        <% "settings" -> %>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
        <% "chart" -> %>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
        <% "users" -> %>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
        <% "folder" -> %>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"/>
        <% "calendar" -> %>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
        <% "mail" -> %>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
        <% _ -> %>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
      <% end %>
    </svg>

    <%!-- Label --%>
    <span class="flex-1"><%= @label %></span>

    <%!-- Count Badge --%>
    <span
      :if={assigns[:count] && @count > 0}
      class={[
        "text-xs font-medium px-2 py-0.5 rounded-full",
        if(@active, do: "bg-[#4CD964] text-white", else: "bg-gray-200 text-gray-600")
      ]}
    >
      <%= @count %>
    </span>
  </.link>

  <%!-- Warning BELOW the item (MANDATORY pattern) --%>
  <div
    :if={assigns[:warning]}
    class="mx-4 mb-2 p-3 bg-amber-50 border border-amber-200 rounded-lg"
  >
    <div class="flex items-start gap-2">
      <svg class="w-4 h-4 text-amber-500 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
      </svg>
      <div class="flex-1">
        <p class="text-sm text-amber-800 font-medium"><%= @warning %></p>
        <a href="#" class="text-xs text-amber-600 hover:underline">Click to fix</a>
      </div>
    </div>
  </div>
</div>
