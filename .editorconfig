# EditorConfig - https://editorconfig.org

# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# JavaScript, TypeScript, JSON
[*.{js,jsx,ts,tsx,json,jsonc}]
indent_size = 2

# Python
[*.py]
indent_size = 4

# Go
[*.go]
indent_style = tab
indent_size = 4

# Rust
[*.rs]
indent_size = 4

# Java, Kotlin
[*.{java,kt,kts}]
indent_size = 4

# C, C++
[*.{c,cpp,h,hpp}]
indent_size = 4

# YAML
[*.{yml,yaml}]
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# Shell scripts
[*.sh]
indent_size = 2

# Makefiles
[Makefile]
indent_style = tab

# XML, HTML
[*.{xml,html,htm}]
indent_size = 2

# CSS, SCSS, Less
[*.{css,scss,less,sass}]
indent_size = 2

# Configuration files
[{.babelrc,.eslintrc,.prettierrc,.stylelintrc}]
indent_size = 2

# Package files
[{package.json,composer.json,Cargo.toml}]
indent_size = 2
