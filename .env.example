# =============================================================================
# Environment Variables Template (Elixir/Phoenix)
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit the .env file to version control
# =============================================================================

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------

# Mix environment: dev, test, prod
MIX_ENV=dev

# Phoenix port
# Development: Use 4005 or higher to avoid conflicts
# Production: Use 4000 (standard default)
PORT=4005

# Phoenix host for production
PHX_HOST=localhost

# Phoenix server binding IP
PHX_SERVER=true

# -----------------------------------------------------------------------------
# Database Configuration (PostgreSQL with Ecto)
# -----------------------------------------------------------------------------

# PostgreSQL connection URL
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/my_app_dev

# Database pool size
POOL_SIZE=10

# Enable SSL for database connections (production)
# DATABASE_SSL=true

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------

# Phoenix secret key base (generate with: mix phx.gen.secret)
# Required for production - MUST BE AT LEAST 64 CHARACTERS
SECRET_KEY_BASE=

# Live view signing salt (generate with: mix phx.gen.secret 32)
LIVE_VIEW_SIGNING_SALT=

# -----------------------------------------------------------------------------
# Email Configuration (with Swoosh)
# -----------------------------------------------------------------------------

# SMTP settings for production
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASSWORD=
# MAIL_FROM=noreply@example.com

# Or use an adapter like Mailgun, SendGrid, etc.
# MAILGUN_API_KEY=
# MAILGUN_DOMAIN=

# -----------------------------------------------------------------------------
# External APIs
# -----------------------------------------------------------------------------

# GitHub (for MCP server integration)
# GITHUB_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Stripe (if using payments)
# STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxx
# STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxx
# STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxx

# -----------------------------------------------------------------------------
# Interactor Authentication (SSO)
# -----------------------------------------------------------------------------
# Use Interactor as your authentication provider (Login with Interactor)
# Documentation: docs/i/guides/interactor-authentication.md

# Interactor server URL (default: https://console.interactor.com)
INTERACTOR_URL=https://console.interactor.com

# Interactor OAuth issuer for JWT verification
INTERACTOR_OAUTH_ISSUER=https://interactor.com

# API Key for server-to-server communication
# INTERACTOR_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# JWKS URL for JWT token verification (auto-derived from INTERACTOR_URL if not set)
# INTERACTOR_JWKS_URL=https://console.interactor.com/oauth/jwks

# -----------------------------------------------------------------------------
# Error Tracking & Monitoring
# -----------------------------------------------------------------------------

# Sentry DSN for error tracking
# SENTRY_DSN=https://xxxxxxxx@o0.ingest.sentry.io/0

# AppSignal (alternative to Sentry)
# APPSIGNAL_PUSH_API_KEY=

# -----------------------------------------------------------------------------
# Cloud Services
# -----------------------------------------------------------------------------

# AWS (for S3, etc.)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=

# Google Cloud
# GOOGLE_APPLICATION_CREDENTIALS=./path/to/service-account.json

# -----------------------------------------------------------------------------
# Background Jobs (Oban)
# -----------------------------------------------------------------------------

# Oban configuration (uses DATABASE_URL by default)
# OBAN_QUEUES=default:10,mailers:5

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------

# Enable experimental features
# FEATURE_NEW_UI=false
# FEATURE_BETA_API=false

# -----------------------------------------------------------------------------
# Development Only
# -----------------------------------------------------------------------------

# Enable LiveReload
# LIVE_RELOAD=true

# Show sensitive data on connection errors (NEVER in production)
# SHOW_SENSITIVE_DATA=true
